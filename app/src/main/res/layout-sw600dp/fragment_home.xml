<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.subhamgupta.roomiesapp.data.viewmodels.MainViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.HomeFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/line1"
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="vertical"
                    android:padding="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="This Month's Spendings"
                                    android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

                                <TextView
                                    android:id="@+id/total_spends"
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/TextAppearance.Material3.DisplayMedium"
                                    android:textColor="#0F9D58" />

                                <TextView
                                    android:id="@+id/updated_on"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Updated on x"
                                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/each_amt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                        android:textColor="@color/colorSecondary"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="EACH"
                                        android:textAlignment="center"
                                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                        android:textColor="@color/colorSecondary" />
                                </LinearLayout>

                                <app.futured.donut.DonutProgressView
                                    android:id="@+id/donut_view"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    app:donut_animateChanges="true"
                                    app:donut_gapWidth="100"
                                    app:donut_strokeWidth="10dp" />
                            </RelativeLayout>

                        </LinearLayout>

                            <com.majorik.sparklinelibrary.SparkLineLayout
                                android:id="@+id/spark"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_margin="8dp"
                                android:visibility="gone"
                                app:s_gradient_line="true"
                                app:s_line_color="#fed32c"
                                app:s_line_second_color="@color/colorPrimary"
                                app:s_line_thickness="3dp"
                                app:s_marker_background_color="#fed32c"
                                app:s_marker_width="6dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/starts_on"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Starts"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall" />

                            <TextView
                                android:id="@+id/today"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="Ends"
                                android:textAlignment="textEnd"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/net_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:visibility="gone" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/refresh"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        app:icon="@drawable/ic_baseline_refresh_24" />
                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:id="@+id/k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Roomies"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/p_recycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/k"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:padding="6dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/kt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"

                        android:layout_weight="1"
                        android:text="Today's Purchase"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                    <TextView
                        android:id="@+id/today_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="18dp"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="#0F9D58" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/item_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:padding="6dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/emptytext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:text="Scan this QR from other device to let other person join this room"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/colorSecondaryVariant" />

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="18dp"
                app:cardElevation="12dp">

                <ImageView
                    android:id="@+id/qr_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginTop="22dp"

                android:layout_marginEnd="12dp"
                android:text="No new purchase this month\nAdd items by clicking on + button\nYou can go to All Expense to see\nprevious month's spending"
                android:textAlignment="center"

                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/colorSecondaryVariant" />

            <Button
                android:id="@+id/go_to_all_exp_btn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Go To All Expenses"
                app:icon="@drawable/ic_outline_arrow_forward" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="12dp"
                android:text="To see each person's spending"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/colorSecondaryVariant" />

            <Button
                android:id="@+id/go_to_diff_user"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Go To Roomie Expenses"
                app:icon="@drawable/ic_outline_arrow_forward" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>
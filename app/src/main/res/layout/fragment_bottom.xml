<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        style="?attr/bottomSheetStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        tools:context=".fragments.BottomFragment">

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.Material3.CardView.Outlined"
                    android:layout_width="match_parent"
                    app:strokeWidth="2dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/imgload"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/imgload" />

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/bprogress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="true"
                        android:visibility="gone"
                        app:indeterminateAnimationType="disjoint"
                        app:indicatorColor="#6081D4FA"
                        app:trackColor="#00FFD600"
                        app:trackThickness="250dp" />
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:hint="Note"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etnote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        style="@style/ThemeOverlay.Material3.Button.ElevatedButton"
                        android:layout_marginBottom="12dp"
                        android:layout_height="wrap_content">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/etdate"

                            app:icon="@drawable/ic_baseline_date_range"
                            android:layout_width="wrap_content"
                            app:cornerRadius="10dp"
                            android:layout_height="wrap_content"
                            android:text="Date" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btcamera"
                            android:layout_width="wrap_content"

                            app:icon="@drawable/ic_outline_photo_camera"
                            android:layout_height="wrap_content"
                            android:text="Camera" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btsave"
                            app:icon="@drawable/ic_baseline_save"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            app:cornerRadius="10dp"
                            android:text="Save" />
                    </com.google.android.material.button.MaterialButtonToggleGroup>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spending"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

            <TextView
                android:id="@+id/s_total_spends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4000"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="#0F9D58" />

            <TextView
                android:id="@+id/s_updated_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated on x"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall" />

                    <com.majorik.sparklinelibrary.SparkLineLayout
                        android:id="@+id/s_spark"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        app:s_gradient_line="true"
                        app:s_line_color="#fed32c"
                        app:s_line_second_color="@color/colorPrimary"
                        app:s_line_thickness="2dp"
                        app:s_marker_background_color="#fed32c"
                        app:s_marker_width="1dp" />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                style="@style/Widget.Material3.CardView.Filled"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#92F4B400"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/s_room_name"
                    android:layout_width="wrap_content"
                    android:text="room"
                    android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                    android:layout_margin="6dp"
                    android:layout_height="wrap_content" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
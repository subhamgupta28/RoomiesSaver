<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:id="@+id/appbar"
            android:layout_alignParentTop="true"

            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:menu="@menu/appbarmenu"
                app:title="Welcome" />

        </com.google.android.material.appbar.AppBarLayout>
        <TextView
            android:id="@+id/welcometext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_margin="6dp"
            android:paddingTop="6dp"
            android:text="Welcome"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/line1"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appbar"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:padding="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This Month's Spendings"
                            android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

                        <TextView
                            android:id="@+id/total_spends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
                            android:textColor="#0F9D58" />

                        <TextView
                            android:id="@+id/updated_on"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Updated on x"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall" />
                    </LinearLayout>

                    <app.futured.donut.DonutProgressView
                        android:id="@+id/donut_view"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        app:donut_animateChanges="true"
                        app:donut_gapWidth="100"
                        app:donut_strokeWidth="12dp" />

                </LinearLayout>

                <com.majorik.sparklinelibrary.SparkLineLayout
                    android:id="@+id/spark"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"
                    android:visibility="gone"
                    app:s_gradient_line="true"
                    app:s_line_color="#fed32c"
                    app:s_line_second_color="@color/colorPrimary"
                    app:s_line_thickness="4dp"
                    app:s_marker_background_color="#fed32c"
                    app:s_marker_width="8dp" />


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_marginStart="12dp"
            android:text="Roomies"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/p_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/k"
            android:padding="6dp" />

        <LinearLayout
            android:id="@+id/kt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/p_recycle"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="Today's Purchase"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />

            <TextView
                android:id="@+id/today_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="12dp"
                android:layout_marginEnd="18dp"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="#0F9D58" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kt"
            android:layout_alignParentBottom="true"
            android:padding="6dp" />


        <LinearLayout
            android:id="@+id/emptytext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="300dp"
            android:orientation="vertical"
            android:visibility="gone">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleX="1.4"
                android:scaleY="1.4"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/emptyastro" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"

                android:text="No new purchase this month\nEmpty! Add items by clicking on + button"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />
        </LinearLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>